<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="plugin" group="system" method="upgrade">
  <name>PLG_SYSTEM_PIXOONA</name>
  <author>redpeppix. GmbH &amp; Co. KG</author>
  <creationDate>2012-11-01</creationDate>
  <copyright>Copyright (C) 2011-2012 redpeppix. GmbH &amp; Co. KG. All rights reserved.</copyright>
  <authorEmail>info@pixoona.com</authorEmail>
  <authorUrl>www.pixoona.com</authorUrl>
  <version>1.3.5</version>
  <description>PLG_SYSTEM_PIXOONA_DESCRIPTION</description>

  <files>
    <folder>language</folder>
    <filename plugin="pixoona">pixoona.php</filename>
    <filename>index.html</filename>
  </files>

  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="pixoona_use" type="radio" default="true" label="PLG_SYSTEM_PIXOONA_USE_LABEL" description="PLG_SYSTEM_PIXOONA_USE_DESC">
          <option value="true">PLG_SYSTEM_PIXOONA_TRUE</option>
          <option value="false">PLG_SYSTEM_PIXOONA_FALSE</option>
        </field>
        <field name="pixoona_limit" type="text" default="" label="PLG_SYSTEM_PIXOONA_LIMIT_LABEL" description="PLG_SYSTEM_PIXOONA_LIMIT_DESC" size="40"/>
      </fieldset>
    </fields>
  </config>

</extension>