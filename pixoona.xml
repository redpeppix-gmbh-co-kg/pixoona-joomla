  <authorUrl>www.pixoona.com</authorUrl>
  <version>1.3.0</version>
  <description>PLG_SYSTEM_RPX_DESC</description>
  <files>
    <filename plugin="pixoona">pixoona.php</filename>
    <filename>index.html</filename>
  </files>
  <languages>
    <language tag="de-DE">de-DE.plg_system_pixoona.ini</language>
    <language tag="en-GB">en-GB.plg_system_pixoona.ini</language>
  </languages>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="rpx_limit" type="text" default="" label="PLG_SYSTEM_RPX_LIMIT_LABEL" description="PLG_SYSTEM_RPX_LIMIT_DESC" size="50"/>
        <field name="rpx_use" type="radio" default="true" label="PLG_SYSTEM_RPX_USE_LABEL" description="PLG_SYSTEM_RPX_USE_DESC">
          <option value="true">PLG_SYSTEM_RPX_TRUE</option>
          <option value="false">PLG_SYSTEM_RPX_FALSE</option>
        </field>
      </fieldset>
    </fields>
  </config>
